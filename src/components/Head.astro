---
import "../styles/global.scss";
import "../styles/fa/css/fontawesome.css";
import "../styles/fa/css/brands.css";
import "../styles/fa/css/regular.css";
import "../styles/fa/css/solid.css";

import { ClientRouter } from "astro:transitions";

const site = Astro.site ?? Astro.url;
const defaultCanonical = new URL(Astro.url.pathname + Astro.url.search, site);
const { canonical = defaultCanonical, frontmatter } = Astro.props;
---

<meta charset="utf-8" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />
<meta name="author" content={frontmatter.author} />
<meta
    name="description"
    content={`${frontmatter.title} - ${frontmatter.description}`}
/>
<meta name="robots" content="all" />
<link rel="sitemap" href="/sitemap-index.xml" />

<title>{frontmatter.title} - {frontmatter.description}</title>

<link rel="canonical" href={canonical || defaultCanonical.href} />

<!-- Fonts -->

<!-- Icons -->
<link rel="shortcut icon" href="/favicon.ico" />

<!-- Google tag (gtag.js) -->
<script
    is:inline
    async
    src="https://www.googletagmanager.com/gtag/js?id=G-RHF0LQDP01"></script>
<script>
    document.addEventListener("astro:page-load", () => {
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("consent", "default", {
            ad_storage: "denied",
            ad_user_data: "denied",
            ad_personalization: "denied",
            analytics_storage: "denied",
        });
        gtag("config", "G-RHF0LQDP01");
    });
</script>

<ClientRouter />
